@model List<PizzeriaOnline.Models.MatrattTyp>

<div class="row">
    @*<div class="mainSide col-sm-7">*@
    <div class="container">
      
        <div id="myCarousel" class="carousel slide col-sm-6" data-ride="carousel">
            <ol class="carousel-indicators">
                <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
                <li data-target="#myCarousel" data-slide-to="1"></li>
                <li data-target="#myCarousel" data-slide-to="2"></li>
            </ol>

            <!-- Wrapper for slides -->
            <div class="carousel-inner">
                <div class="item active">
                    <img src="~/images/pizza-2802332__480.jpg" alt="Pizza extra ost" style="width: 100%;">
                    @*<div class="carousel-caption">
                        <h3>Nugjort</h3>
                        <p>Inget sen igår allt gjort efter beställning!</p>
                    </div>*@
                </div>

                <div class="item">
                    <img src="~/images/pizza-3007395_1280.jpg" alt="Pizza a la Chicago" style="width: 100%;">
                    @*<div class="carousel-caption">
                        <h3>Alltid färskt</h3>
                        <p>Allt färskt och ekologiskt!</p>
                    </div>*@
                </div>

                <div class="item">
                    <img src="~/images/pizza-2068272__480.jpg" alt="Pizza pizza" style="width: 100%;">
                    @*<div class="carousel-caption">
                            <h3>Registrera dig!</h3>
                            <p>Ta del av vårt goda urval av rätter!</p>
                        </div>*@
                </div>
            </div>
            <!-- Left and right controls -->
            <a class="left carousel-control" href="#myCarousel" data-slide="prev">
                    <span class="glyphicon glyphicon-chevron-left"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="right carousel-control" href="#myCarousel" data-slide="next">
                    <span class="glyphicon glyphicon-chevron-right"></span>
                    <span class="sr-only">Next</span>
                </a>
        </div>
        @*</div>*@

        <div class="sideBar col-sm-5">
            <h3>Vår meny!</h3>
            <ul>
                @foreach (var type in Model)
                {
                    <li>
                        <a asp-controller="Home"
                           asp-action="ViewMeny"
                           asp-route-id="@type.MatrattTyp1"
                           data-ajax="true"
                           data-ajax-method="POST"
                           data-ajax-mode="replace"
                           data-ajax-update="#partialStart">
                            @type.Beskrivning
                        </a>
                    </li>
                }

            </ul>

            <div id="partialStart">

            </div>
        </div>
    </div>
</div>